WindowTitle {VolumeLevel}
WindowSize 130 170
Font "xft:Arial:style=bold:size=14"
Init
 Begin
  Set $value = (GetOutput {/home/pater/bin/volume} 1 -1)
  If $value=={Muted} Then
    Begin
      ChangeIcon 1 images/icons/volume/volume0.png
      ChangeValue 2 0
      ChangeTitle 3 $value
    End
  Else
    Begin
      Set $display = $value {%}
      If $value>65 Then
        Begin
          ChangeIcon 1 images/icons/volume/volume4.png
        End
      Else
      Begin
        If $value>33 Then
          Begin
            ChangeIcon 1 images/icons/volume/volume3.png
          End
        Else
          Begin
            If $value>0 Then
              Begin
                ChangeIcon 1 images/icons/volume/volume2.png
              End
            Else
              Begin
                ChangeIcon 1 images/icons/volume/volume1.png
              End
          End
      End
      ChangeValue 2 $value
      ChangeTitle 3 $display
    End
 End

PeriodicTasks
Begin
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
    Quit
  End
End

Widget 1
Property
  Colorset 17
  Size 120 120
  Position 5 0
  Type ItemDraw
  Flags NoFocus
  Icon images/icons/volume/volume3.png
Main
  Case message of
    SingleClic:
    Begin
    End
End

Widget 2
Property
  Colorset 18
  Size 120 15
  Position 5 120
  Type HDipstick
  Flags NoFocus
  Value 50
  MinValue 0
  MaxValue 100
Main
  Case message of
    SingleClic:
    Begin
    End
End

Widget 3
Property
  Title { }
  Colorset 17
  Size 130 4
  Position 0 140
  Type ItemDraw
  Flags NoReliefString NoFocus
Main
 Case message of
  SingleClic:
  Begin
  End
End
