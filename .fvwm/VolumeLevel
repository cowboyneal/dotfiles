WindowTitle {VolumeLevel}
WindowSize 130 40
Font "xft:Arial:style=bold:size=14"
Init
 Begin
  Set $title = {Volume: } (GetOutput {/home/pater/bin/volume} 1 -1)
  ChangeTitle 1 $title
 End

PeriodicTasks
Begin
  If (RemainderOfDiv (GetTime) 1)==0 Then
  Begin
    Quit
  End
End

Widget 1
Property
  Title {TITLE}
  Size 130 40
  Position 0 0
  Type ItemDraw
  Flags NoReliefString
Main
 Case message of
  SingleClic:
  Begin
   Quit
  End
End
