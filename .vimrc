execute pathogen#infect()

syntax on
set title
set t_Co=256
set background=dark

set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

set textwidth=0

set nobackup
set nowritebackup
set noswapfile

set nocompatible
filetype plugin indent on

map <C-J> gqap
map <C-R> :r ~/doc/
